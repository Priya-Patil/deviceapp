<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="10dp"
    android:layout_centerInParent="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_marginBottom="45dp"
        app:cardBackgroundColor="@color/grey_3"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document"
                android:gravity="center"
                android:drawableTop="@drawable/ic_file"
                />

            <TextView
                android:id="@+id/tv_camera"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:gravity="center"
                android:drawableTop="@drawable/ic_camera"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_gallary"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gallary"
                android:gravity="center"
                android:drawableTop="@drawable/ic_attachment_black_24dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_audio"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:gravity="center"
                android:drawableTop="@drawable/ic_arrow_back"
                />

            <TextView
                android:id="@+id/tv_video"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video"
                android:gravity="center"
                android:drawableTop="@drawable/ic_arrow_back"
                />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:gravity="center"
                android:drawableTop="@drawable/ic_person_black_24dp"/>


        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>